{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Solve example",
      "type": "shell",
      "command": "ruby ${file} ${fileDirname}/example.txt",
      "problemMatcher": [],
      "group": "build"
    },
    {
      "label": "Solve example (watch)",
      "type": "shell",
      "command": "onchange -k ${file} ${fileDirname}/example.txt -- sh -c 'clear; ruby ${file} ${fileDirname}/example.txt'",
      "problemMatcher": [],
      "group": "build"
    },
    {
      "label": "Solve input",
      "type": "shell",
      "command": "ruby ${file} ${fileDirname}/input.txt",
      "problemMatcher": [],
      "group": "build"
    }
  ]
}
