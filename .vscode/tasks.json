{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Solve example",
      "type": "shell",
      "command": "clear; echo ${file} ${fileDirname}/example.txt; ruby ${file} ${fileDirname}/example.txt",
      "problemMatcher": [],
      "group": "build"
    },
    {
      "label": "Solve example (watch)",
      "type": "shell",
      "command": "onchange -k ${file} ${fileDirname}/example.txt -- sh -c 'clear; echo ${file} ${fileDirname}/example.txt; ruby ${file} ${fileDirname}/example.txt'",
      "problemMatcher": [],
      "group": "build"
    },
    {
      "label": "Solve input",
      "type": "shell",
      "command": "clear; echo ${file} ${fileDirname}/example.txt; ruby ${file} ${fileDirname}/input.txt",
      "problemMatcher": [],
      "group": "build"
    },
    {
      "label": "Create files",
      "type": "shell",
      "command": "mkdir ${input:day}; touch ${input:day}/input.txt ${input:day}/example.txt ${input:day}/solution_1.rb ${input:day}/solution_2.rb",
      "problemMatcher": [],
      "group": "build"
    }
  ],
  "inputs": [
    {
      "id": "day",
      "type": "promptString",
      "description": "Day e.g. 01",
      "default": "01"
    }
  ]
}
